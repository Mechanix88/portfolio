.my-works{
    padding-top: 200px;
    padding-bottom: 200px;
}

.my-works__wrapper{
    display: flex;
    position: relative;
    @include tablets {
        flex-direction: column;
       

        }
    
}
.my-works__title {
    color: #2d3c4e;
    font-family: "Open Sans";
    font-size: 36px;
    font-weight: 700;
    margin-bottom: 80px;
}

.my-works__title-small {
    margin-bottom: 30px;
    font-size: 30px;
    color: #2d3c4e;
    font-weight: 700;
    @include tablets {
      text-align: center;
    }

}

