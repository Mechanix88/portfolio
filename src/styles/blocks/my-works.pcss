.my-works{
    padding-top: 200px;
    padding-bottom: 200px;
}

.my-works__wrapper{
    display: flex;
    position: relative;
    
}
.my-works__title {
    color: #2d3c4e;
    font-family: "Open Sans";
    font-size: 30px;
    font-weight: 700;
    margin-bottom: 30px;
}

